<Shell
    x:Class="DestinationsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DestinationsApp">

    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate pages:MainPage}" />

    <MenuItem Text="Destinations" Clicked="OnGoToDestinations"/>
    <MenuItem Text="Add New Destination" Clicked="OnGoToAddDestination"/>
    <MenuItem Text="Expenses" Clicked="OnGoToExpenses"/>
    <MenuItem Text="Weather" Clicked="OnGoToWeather"/>
</Shell>
