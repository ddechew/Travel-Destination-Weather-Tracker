<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DestinationsApp.WeatherPage"
             Title="Weather">

    <Grid>


        <ActivityIndicator x:Name="LoadingIndicator"
                                               IsRunning="True"
                                               IsVisible="True"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Color="DodgerBlue"
                                               WidthRequest="50"
                                               HeightRequest="50" />

        <ContentView x:Name="MainContent" IsVisible="False">
            <ScrollView x:Name="MainScrollView">
                <VerticalStackLayout Padding="20" Spacing="15">

                    <Label x:Name="CityLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                    <Label x:Name="TemperatureLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="DodgerBlue"
                       HorizontalOptions="Center" />

                    <Label x:Name="DescriptionLabel"
                       FontSize="16"
                       HorizontalOptions="Center" />

                    <Image x:Name="ConditionIcon"
                       WidthRequest="64"
                       HeightRequest="64"
                       HorizontalOptions="Center" />

                    <Label x:Name="ChanceOfRainLabel"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="LightSkyBlue" />

                    <Label x:Name="HumidityLabel"
                       FontSize="16"
                       HorizontalOptions="Center" />

                    <Label x:Name="WindSpeedLabel"
                       FontSize="16"
                       HorizontalOptions="Center" />

                    <Label x:Name="MaxTempLabel"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="#FF5722" />

                    <Label x:Name="MinTempLabel"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="#03A9F4" />

                    <Label Text="Hourly Forecast"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,30,0,10"
                       HorizontalOptions="Center" />

                    <ScrollView Orientation="Horizontal"
                            HeightRequest="150"
                            Margin="0,0,0,10">
                        <HorizontalStackLayout x:Name="HourlyForecastLayout"
                                           Spacing="20"
                                           Padding="20,0"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        </HorizontalStackLayout>
                    </ScrollView>

                    <Label Text="3-Day Forecast"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="0,30,0,10"
                       HorizontalOptions="Center" />

                    <CollectionView x:Name="ForecastListView"
                                Margin="0,10,0,20"
                                SelectionMode="Single"
                                SelectionChanged="OnForecastSelected">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="20"
                                   Margin="15"
                                   CornerRadius="15"
                                   BackgroundColor="#1A1D26"
                                   BorderColor="#00ADB5"
                                   HasShadow="True">
                                    <Grid ColumnDefinitions="Auto,*,Auto"
                                      RowDefinitions="Auto"
                                      ColumnSpacing="15"
                                    VerticalOptions="Center">

                                        <!-- Icon -->
                                        <Image Grid.RowSpan="1"
                                           Source="{Binding Day.Condition.FullIcon}"
                                           WidthRequest="60"
                                           HeightRequest="60"
                                           VerticalOptions="Center" />

                                        <!-- Date & Condition -->
                                        <VerticalStackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                                            <Label Text="{Binding DisplayDate}"
                                               FontAttributes="Bold"
                                               FontSize="17"
                                               TextColor="White" />

                                            <Label Text="{Binding Day.Condition.Text}"
                                               FontSize="14"
                                               TextColor="#CCCCCC" />
                                        </VerticalStackLayout>

                                        <!-- Temps -->
                                        <VerticalStackLayout Grid.Column="2"
                                                         HorizontalOptions="End"
                                                         VerticalOptions="Center"
                                                         Spacing="4">
                                            <Label Text="{Binding Day.MaxTempC, StringFormat='â†‘ {0}Â°C'}"
                                               FontSize="14"
                                               TextColor="#FF5722" />
                                            <Label Text="{Binding Day.MinTempC, StringFormat='â†“ {0}Â°C'}"
                                               FontSize="14"
                                               TextColor="#03A9F4" />
                                            <Label Text="{Binding Day.AvgTempC, StringFormat='Avg: {0}Â°C'}"
                                               FontSize="13"
                                               TextColor="#FFD369" />
                                            <Label Text="{Binding Day.ChanceOfRain, StringFormat='ðŸ’§ {0}%'}"
                                               FontSize="13"
                                               TextColor="#4FC3F7" />

                                        </VerticalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </ContentView>
    </Grid>
</ContentPage>
